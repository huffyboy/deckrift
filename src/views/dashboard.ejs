<div class="dashboard-container">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Welcome, <%= user.username %>!</h2>
        </div>
    </div>

    <div class="row">
        <!-- Statistics Card -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Game Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <p><strong>Games Played:</strong> <%= statistics.gamesPlayed || 0 %></p>
                            <p><strong>Games Won:</strong> <%= statistics.gamesWon || 0 %></p>
                            <p><strong>Win Rate:</strong> <%= statistics.winRate || 0 %>%</p>
                        </div>
                        <div class="col-6">
                            <p><strong>Total Score:</strong> <%= statistics.totalScore || 0 %></p>
                            <p><strong>Average Score:</strong> <%= statistics.avgScore || 0 %></p>
                            <p><strong>Best Score:</strong> <%= statistics.bestScore || 0 %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Saves Card -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Saves</h5>
                </div>
                <div class="card-body">
                    <% if (recentSaves && recentSaves.length > 0) { %>
                        <div class="list-group">
                            <% recentSaves.forEach(save => { %>
                                <div class="list-group-item">
                                    <h6 class="mb-1"><%= save.saveName %></h6>
                                    <p class="mb-1 text-muted">
                                        <%= new Date(save.timestamp).toLocaleDateString() %>
                                    </p>
                                    <small class="text-muted">
                                        Realm: <%= save.gameState.currentRealm || 'Unknown' %>
                                    </small>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p class="text-muted">No saves found.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a href="/" class="btn btn-primary me-2">Play Game</a>
                    <a href="/profile" class="btn btn-outline-secondary me-2">Edit Profile</a>
                    <a href="/api/auth/logout" class="btn btn-outline-danger">Logout</a>
                </div>
            </div>
        </div>
    </div>
</div> 